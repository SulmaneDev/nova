{
  "name": "nova",
  "version": "1.0.0",
  "description": "Nova is a powerful, scalable suite of components designed for the Novarel Framework.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/*"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "exports": {
    "./foundation": {
      "import": "./dist/esm/src/foundation.js",
      "require": "./dist/cjs/src/foundation.js",
      "types": "./dist/types/foundation.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "pnpm jest",
    "test:coverage": "pnpm jest --coverage",
    "prepublishOnly": "pnpm run build",
    "format": "pnpm prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "build:esm": "pnpm swc src --config-file .swcrc --out-dir dist/esm",
    "build:cjs": "pnpm swc src --config-file .cjs.swcrc --out-dir dist/cjs",
    "build": "pnpm build:esm && pnpm build:cjs && pnpm types",
    "build:watch": "pnpm build:esm -- --watch",
    "types": "pnpm tsc --emitDeclarationOnly --declarationDir dist/types",
    "lint": "eslint src --ext .ts",
    "release": "standard-version",
    "prepare": "husky install",
    "clean": "rm -rf dist",
    "check": "pnpm lint && pnpm format && pnpm test && pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SulmaneDev/novarel.git"
  },
  "keywords": [
    "Novarel",
    "Nova",
    "Framework",
    "HTTP",
    "ORM",
    "Foundation",
    "Components",
    "TypeScript",
    "Web",
    "framework",
    "Backend"
  ],
  "author": "Muhammad Sulman <whomaderules@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SulmaneDev/novarel/issues"
  },
  "homepage": "https://github.com/SulmaneDev/novarel#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.12.6",
    "@swc/jest": "^0.2.38",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.4",
    "chokidar": "^4.0.3",
    "eslint": "^9.29.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "contributors": [
    {
      "name": "Muhammad Sulman",
      "email": "whomaderules@gmail.com",
      "url": "https://github.com/SulmaneDev"
    }
  ],
  "dependencies": {
    "reflect-metadata": "^0.2.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.11.1"
  }
}